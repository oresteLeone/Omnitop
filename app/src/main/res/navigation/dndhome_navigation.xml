<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dndhome_navigation"
    app:startDestination="@id/dndRecenti">

    <fragment
        android:id="@+id/dndRecenti"
        android:name="com.annoyingturtle.omnitop.fragment.dndRecenti.DndRecentiFragment"
        android:label="Campagne DnD"
        tools:layout="@layout/fragment_dnd_recenti" >
        <action
            android:id="@+id/action_dndRecenti_to_dndLibrary"
            app:destination="@id/dndLibrary" />
        <action
            android:id="@+id/action_dndRecenti_to_dndGm"
            app:destination="@id/dndGm" />
        <action
            android:id="@+id/action_dndRecenti_to_dndPg"
            app:destination="@id/dndPg" />
        <action
            android:id="@+id/action_dndRecenti_to_dndAddCampagna"
            app:destination="@id/dndAddCampagna" />
    </fragment>
    <fragment
        android:id="@+id/dndGm"
        android:name="com.annoyingturtle.omnitop.fragment.DndGmFragment"
        android:label="Campagne DnD Master"
        tools:layout="@layout/fragment_dnd_gm" >
        <action
            android:id="@+id/action_dndGm_to_dndRecenti"
            app:destination="@id/dndRecenti" />
        <action
            android:id="@+id/action_dndGm_to_dndLibrary"
            app:destination="@id/dndLibrary" />
        <action
            android:id="@+id/action_dndGm_to_dndPg"
            app:destination="@id/dndPg" />
        <action
            android:id="@+id/action_dndGm_to_dndAddCampagna"
            app:destination="@id/dndAddCampagna" />
    </fragment>
    <fragment
        android:id="@+id/dndPg"
        android:name="com.annoyingturtle.omnitop.fragment.DndPgFragment"
        android:label="Campagne DnD Personaggio"
        tools:layout="@layout/fragment_dnd_pg" >
        <action
            android:id="@+id/action_dndPg_to_dndRecenti"
            app:destination="@id/dndRecenti" />
        <action
            android:id="@+id/action_dndPg_to_dndLibrary"
            app:destination="@id/dndLibrary" />
        <action
            android:id="@+id/action_dndPg_to_dndGm"
            app:destination="@id/dndGm" />
        <action
            android:id="@+id/action_dndPg_to_dndAddCampagna"
            app:destination="@id/dndAddCampagna" />
    </fragment>
    <fragment
        android:id="@+id/dndLibrary"
        android:name="com.annoyingturtle.omnitop.fragment.DndLibraryFragment"
        android:label="Libreria DnD"
        tools:layout="@layout/fragment_dnd_library" >
        <action
            android:id="@+id/action_dndLibrary_to_dndRecenti"
            app:destination="@id/dndRecenti" />
        <action
            android:id="@+id/action_dndLibrary_to_dndGm"
            app:destination="@id/dndGm" />
        <action
            android:id="@+id/action_dndLibrary_to_dndPg"
            app:destination="@id/dndPg" />
        <action
            android:id="@+id/action_dndLibrary_to_dndAddCampagna"
            app:destination="@id/dndAddCampagna" />
    </fragment>
    <fragment
        android:id="@+id/dndAddCampagna"
        android:name="com.annoyingturtle.omnitop.fragment.DndAddCampagnaFragment"
        android:label="Aggiungi Campagna"
        tools:layout="@layout/fragment_dnd_add_campagna" >
        <action
            android:id="@+id/action_dndAddCampagna_to_dndRecenti"
            app:destination="@id/dndRecenti" />
        <action
            android:id="@+id/action_dndAddCampagna_to_dndLibrary"
            app:destination="@id/dndLibrary" />
        <action
            android:id="@+id/action_dndAddCampagna_to_dndGm"
            app:destination="@id/dndGm" />
        <action
            android:id="@+id/action_dndAddCampagna_to_dndPg"
            app:destination="@id/dndPg" />
    </fragment>
</navigation>